{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <div class="row">
        <div class="col-sm-10">
        {% for job in jobs %}
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">{{job.title}}</h3>
                </div>
                <div class="panel-body">
                    <p>{{job.description}}</p>
                    <p><b>Reply to:</b> <u>{{job.mail}}</u></p>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
    </div>
{% endblock %}