{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/MainBundle/js/manager.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container-fluid">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
        
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Publish new job offer</h3>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" method="POST" action="{{ path('new') }}">
                        <div id="fg-date" class="form-group">
                            <label class="col-sm-2 control-label">Title</label>
                            <div class="col-sm-8">
                            <input id="inputTitle" type="text" class="form-control" name="title">
                            <span id="helpBlock-title" class="help-block"></span>
                            </div>
                        </div>
                        <div id="fg-name" class="form-group">
                            <label class="col-sm-2 control-label">Description</label>
                            <div class="col-sm-8">
                            <textarea id="inputDescription" class="form-control" name="description" rows="10"></textarea>
                            <span id="helpBlock-description" class="help-block"></span>
                            </div>
                        </div>
                        <div id="fg-mail" class="form-group">
                            <label class="col-sm-2 control-label">Mail</label>
                            <div class="col-sm-3">
                            <input id="inputMail" type="text" class="form-control" name="mail">
                            <span id="helpBlock-mail" class="help-block"></span>
                            </div>
                        </div>        

                        <input id="submitJob" class="btn btn-primary" type="button" value="Publish" />
                    </form>
                </div>
            </div>
        
        </div>
    </div>
    </div>
{% endblock %}
